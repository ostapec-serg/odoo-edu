<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="hr_hospital_hospital_report_view_form" model="ir.ui.view">
            <field name="name">hr_hospital_hospital_report_view_form</field>
            <field name="model">hr.hospital.hospital.report.wizard</field>
            <field name="arch" type="xml">
                <form string="Create report">
                    <sheet>
                        <group>
                            <field name="report_date"/>
                        </group>
                        <footer>
                            <button name="create_report" string="Create" type="object" class="btn btn-primary"/>
                            <button special="cancel" string="Cancel" class="btn btn-secondary"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="hr_hospital_action_view_hospital_report" model="ir.actions.act_window">
            <field name="name">Create report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.hospital.hospital.report.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="hr_hospital_hospital_report_view_form"/>
            <field name="binding_model_id" ref="model_hr_hospital_disease_report_wizard"/>
            <field name="target">new</field>
        </record>

        <menuitem id="hr_hospital_report_main_report"
                  parent="hr_hospital_report_main"
                  name="Report" sequence="100"
                  action="hr_hospital_action_view_hospital_report"
        />
</odoo>
